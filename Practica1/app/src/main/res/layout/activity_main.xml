<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MI CALCULADORA"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:padding="16dp"
        android:background="@color/purple_500"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenidos a mi APP Calculadora "
        android:padding="16dp"
        android:textSize="30dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/calculadora" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Introduzca el primer numero:"
    android:padding="16dp"
    android:textSize="20dp"
    
    />
    <EditText
        android:id="@+id/EdPrimerNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numero 1"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="16dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introduzca el segundo numero"
        android:padding="16dp"
        android:textSize="20dp"

        />
    <EditText
        android:id="@+id/EdSegundoNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numero 2"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="16dp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="25dp"
    >
<Button
    android:id="@+id/btnSumar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="+"
    android:textSize="25dp"

    />
    <Button
        android:id="@+id/btnRestar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/btnMultiplicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/btnDividir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="25dp"
        />

</LinearLayout>



</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>